{
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "allowUnreachableCode": true,
    "noImplicitAny": true,
    "noErrorTruncation": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "lib": ["es2015", "dom"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}